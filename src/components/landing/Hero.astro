---
interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "👋 Soy Whitney Espinoza. Transformé mi pasión por las redes en una carrera; ahora te enseño a hacer lo mismo.", 
  subtitle = "Academia digital con 20 módulos, 90+ lecciones y clases nuevas cada mes para que monetices tu contenido desde cero." 
} = Astro.props;
---

<section class="relative min-h-screen flex items-center justify-center text-center bg-gradient-to-b from-primary to-primary/90">
  <div class="relative z-30 max-w-7xl px-4 sm:px-6 lg:px-8" data-aos="fade-left">
    <!-- Logo -->
    <div class="mb-8 flex justify-center">
      <img 
        src="/assets/IF_Logo.webp" 
        alt="Influencer Factory Logo" 
        class="w-80 h-auto object-contain"
      />
    </div>

    <!-- Main Content -->
    <h1 class="text-white text-3xl md:text-5xl lg:text-6xl font-bold mb-6 drop-shadow-lg leading-tight">
      {title}
    </h1>

    <p class="text-white text-xl md:text-2xl max-w-4xl mx-auto mb-8 leading-relaxed">
      {subtitle}
    </p>
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
      <a 
        href="#planes" 
        class="inline-flex items-center justify-center px-8 py-4 bg-secondary text-white rounded-full font-semibold text-lg hover:bg-secondary/90 transition-colors duration-300 shadow-lg hover:shadow-xl"
      >
        ▶ Empezar ahora
      </a>
    </div>

    <!-- Social Proof -->
    <div class="text-white/90 text-lg mb-4">
      ⭐ Más de 1,400 creadores formados · Actualizaciones mensuales · Acceso 24/7
    </div
  </div>
</section> 