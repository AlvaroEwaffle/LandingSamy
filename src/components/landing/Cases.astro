---

<section
  class="py-20 bg-black relative overflow-hidden overflow-x-hidden w-full max-w-full"
>
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Historias de 칄xito y Resultados Reales
        </h2>
        <div class="w-24 h-1 bg-secondary mx-auto"></div>
      </div>

      <!-- Carousel -->
      <div class="relative mb-12">
        <div id="carousel-cases" class="relative">
          {cases.map((c, idx) => (
            <div class={`grid lg:grid-cols-2 gap-12 items-stretch carousel-case${idx === 0 ? ' active' : ''}`} data-index={idx}>
              {/* Left Column - Video */}
              <div class="order-2 lg:order-1 flex justify-center h-full">
                <div class="bg-white/10 backdrop-blur-sm rounded-2xl border border-white/20 flex items-center h-full max-w-[360px] w-full mx-auto">
                  <div class="relative w-full aspect-[9/16] rounded-xl overflow-hidden mx-auto">
                    <iframe
                      src={c.videoUrl}
                      class="w-full h-full"
                      frameborder="0"
                      allow="autoplay; fullscreen; picture-in-picture"
                      allowfullscreen
                      title="Influencer Factory - Caso de 칄xito"
                    ></iframe>
                  </div>
                </div>
              </div>
              {/* Right Column - Success Metrics */}
              <div class="order-1 lg:order-2 h-full flex items-stretch">
                <div class="space-y-6 w-full flex flex-col justify-center h-full">
                  {c.metrics.map((metric) => (
                    <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20 flex items-center h-full">
                      <div class="flex items-center space-x-4">
                        <div class="text-4xl">{metric.icon}</div>
                        <div>
                          <div class="text-2xl font-bold text-white mb-1">{metric.metric}</div>
                          <p class="text-white/90">{metric.description}</p>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
        <!-- Carousel Navigation -->
        <div class="flex justify-center gap-6 mt-8">
          <button type="button" id="carousel-prev" class="w-12 h-12 rounded-full bg-white/10 text-white text-2xl flex items-center justify-center hover:bg-secondary transition-colors">&#8592;</button>
          <button type="button" id="carousel-next" class="w-12 h-12 rounded-full bg-white/10 text-white text-2xl flex items-center justify-center hover:bg-secondary transition-colors">&#8594;</button>
        </div>
        <!-- Dots -->
        <div class="flex justify-center gap-2 mt-4" id="carousel-dots">
          {cases.map((_, idx) => (
            <span class={`inline-block w-3 h-3 rounded-full ${idx === 0 ? 'bg-secondary' : 'bg-white/20'}`} data-dot={idx}></span>
          ))}
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center">
        <a 
          href="#planes" 
          class="inline-flex items-center justify-center px-8 py-4 bg-secondary text-white rounded-full font-semibold text-lg hover:bg-secondary/90 transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          Quiero ser el pr칩ximo caso de 칠xito
        </a>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  let current = 0;
  const cases = Array.from(document.querySelectorAll('.carousel-case'));
  const dots = Array.from(document.querySelectorAll('[data-dot]'));
  let timer = null;
  function showCase(idx) {
    cases.forEach((el, i) => el.classList.toggle('active', i === idx));
    dots.forEach((el, i) => el.classList.toggle('bg-secondary', i === idx));
    dots.forEach((el, i) => el.classList.toggle('bg-white/20', i !== idx));
    current = idx;
    resetTimer();
  }
  function nextAuto() {
    showCase((current + 1) % cases.length);
  }
  function resetTimer() {
    if (timer) clearInterval(timer);
    timer = setInterval(nextAuto, 30000);
  }
  document.getElementById('carousel-prev').onclick = () => showCase((current - 1 + cases.length) % cases.length);
  document.getElementById('carousel-next').onclick = () => showCase((current + 1) % cases.length);
  dots.forEach((el, i) => el.onclick = () => showCase(i));
  resetTimer();
</script>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  #carousel-cases {
    position: relative;
    min-height: 400px;
  }
  .carousel-case {
    transition: opacity 0.5s;
    opacity: 0;
    pointer-events: none;
    position: absolute;
    width: 100%;
    left: 0;
    top: 0;
  }
  .carousel-case.active {
    opacity: 1;
    pointer-events: auto;
    position: relative;
    z-index: 1;
  }
</style>

