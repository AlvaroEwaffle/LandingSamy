  #carousel-cases {
    position: relative;
    min-height: 400px;
  }
  .carousel-case {
    transition: opacity 0.5s;
    opacity: 0;
    pointer-events: none;
    position: absolute;
    width: 100%;
    left: 0;
    top: 0;
  }
  .carousel-case.active {
    opacity: 1;
    pointer-events: auto;
    position: relative;
    z-index: 1;
  }
</style>
