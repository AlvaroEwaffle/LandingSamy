---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { icon: "ri-instagram-fill", href: "https://www.instagram.com/whit_espinoza/", label: "Instagram" },
];
---

<footer class="relative overflow-hidden bg-black overflow-x-hidden w-full max-w-full">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Main Footer Content -->
    <div class="py-16 text-center">
      <!-- Logo -->
      <div class="mb-8">
        <img src="/assets/IF_Logo.webp" alt="Influencer Factory Logo" class="h-16 mx-auto" />
      </div>

      <!-- Persuasive Message -->
      <div class="max-w-3xl mx-auto mb-8">
        <h2 class="text-3xl md:text-4xl font-bold text-accent mb-4">
          Monetizar tu creatividad es posible
        </h2>
        <p class="text-xl text-white/90">
          Influencer Factory te muestra el camino
        </p>
      </div>

      <!-- Social Links -->
      <div class="flex justify-center space-x-6 mb-8">
        {socialLinks.map(({ icon, href, label }) => (
          <a
            href={href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-white/70 hover:text-accent transition-colors"
            aria-label={label}
          >
            <i class={`${icon} text-2xl`}></i>
          </a>
        ))}
      </div>

      <!-- Final CTA -->
      <div class="mb-8">
        <a 
          href="#planes" 
          class="inline-flex items-center justify-center px-8 py-4 bg-secondary text-white rounded-full font-semibold text-lg hover:bg-secondary/90 transition-colors duration-300 shadow-lg hover:shadow-xl"
        >
          Únete hoy
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-sm text-white/70">
          © {currentYear} Influencer Factory. Todos los derechos reservados.
        </p>
        <div class="flex space-x-6 text-sm text-white/70">
          <a href="/privacidad" class="hover:text-accent transition-colors">
            Política de Privacidad
          </a>
          <a href="/terminos" class="hover:text-accent transition-colors">
            Términos y Condiciones
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
</style> 