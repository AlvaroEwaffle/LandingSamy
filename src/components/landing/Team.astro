---
interface TeamMember {
  name: string;
  role: string;
  description: string;
}

const teamMembers: TeamMember[] = [
  {
    name: "Whitney Espinoza",
    role: "Fundadora & Instructora Principal",
    description: "Transformé mi pasión por las redes en una carrera exitosa. Ahora enseño a más de 1,400 creadores cómo monetizar su contenido y construir marcas auténticas."
  }
];
---

<section class="relative py-20 bg-black overflow-x-hidden w-full max-w-full">
  <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Title Section -->
    <div class="text-center mb-16">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4">
        Tu Mentora: Whitney Espinoza
      </h2>
      <p class="text-xl text-white max-w-3xl mx-auto">
        La creadora detrás de Influencer Factory
      </p>
      <div class="w-24 h-1 bg-secondary mx-auto mt-4"></div>
    </div>

    <!-- Team Grid -->
    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        {teamMembers.map((member) => (
          <>
            <!-- Image Placeholder -->
            <div class="fade-in card-hover group relative bg-white rounded-2xl shadow-xl overflow-hidden">
              <div class="relative h-96 overflow-hidden bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center">
                <div class="text-center">
                  <div class="mb-4 flex justify-center">
                    <div class="aspect-[3/4] max-w-xs w-full rounded-xl overflow-hidden bg-transparent">
                      <img src="https://img1.wsimg.com/isteam/ip/92b255bb-2faf-456d-a379-7a24f5642738/1.png/:/cr=t:0%25,l:12.5%25,w:75%25,h:100%25/rs=w:1080,h:1440,cg:true" alt="Whitney Espinoza" class="w-full h-full object-cover" />
                    </div>
                  </div>
                  <p class="text-lg text-white font-semibold">Whitney Espinoza</p>
                </div>
              </div>
            </div>

            <!-- Content -->
            <div class="space-y-6">
              <div>
                <h3 class="text-3xl font-bold text-white mb-2">
                  {member.name}
                </h3>
                <p class="text-white font-semibold text-xl mb-4">
                  {member.role}
                </p>
                <p class="text-lg text-white leading-relaxed">
                  {member.description}
                </p>
              </div>

              <!-- Stats -->
              <div class="grid grid-cols-2 gap-6 pt-6">
                <div class="text-center">
                  <div class="text-3xl font-bold text-white">1,400+</div>
                  <div class="text-white">Creadores formados</div>
                </div>
                <div class="text-center">
                  <div class="text-3xl font-bold text-white">20</div>
                  <div class="text-white">Módulos de formación</div>
                </div>
              </div>
            </div>
          </>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
</style> 