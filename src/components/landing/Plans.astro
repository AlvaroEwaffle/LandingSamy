---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Planes y precios", 
  description = "Elige la opción que mejor se adapte a ti y asegura tu cupo en este evento único." 
} = Astro.props;

const plans = [
  {
    name: "Fase 1",
    price: "297.000",
    currency: "CLP",
    features: [
      "Clase en vivo con demostración práctica del método de grabación y edición en camilla",
      "Material digital exclusivo: herramientas, biblioteca de ángulos y planificador de contenido",
      "Coffee break para compartir, conectar y hacer networking",
      "Brindis de cierre + entrega de certificación",
      "Experiencia final sorpresa junto a Samy que no querrás perderte"
    ],
    popular: false,
    available: true,
    soldOut: true
  },
  {
    name: "Fase 2",
    price: "347.000",
    currency: "CLP",
    features: [
      "Clase en vivo con demostración práctica del método de grabación y edición en camilla",
      "Material digital exclusivo: herramientas, biblioteca de ángulos y planificador de contenido",
      "Coffee break para compartir, conectar y hacer networking",
      "Brindis de cierre + entrega de certificación",
      "Experiencia final sorpresa junto a Samy que no querrás perderte"
    ],
    popular: true,
    available: true
  },
  {
    name: "Fase 3",
    price: "",
    currency: "",
    originalPrice: "",
    features: [],
    message: "Esta es la última llamada, la Fase 3 es el cierre oficial y el precio no bajará, ¡no lo dejes pasar otra vez!",
    popular: false,
    available: false
  }
];
---

<section id="planes" class="py-20 bg-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
        {title}
      </h2>
      <p class="text-xl text-white/80 max-w-3xl mx-auto leading-relaxed">
        {description}
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      {plans.map((plan, index) => (
        <div 
          class={`relative rounded-2xl p-8 transition-all duration-300 transform hover:-translate-y-2 ${
            plan.popular 
              ? 'bg-white shadow-2xl border-2 border-primary scale-105' 
              : plan.available 
                ? 'bg-white shadow-lg border border-gray-200' 
                : 'bg-gray-100 shadow-md border border-gray-200 opacity-60'
          }`}
        >
                      {/* Full gray overlay for sold out plans */}
            {plan.soldOut && (
              <div class="absolute inset-0 bg-gray-300/40 rounded-2xl pointer-events-none z-10"></div>
            )}
          {/* Popular Badge */}
          {plan.popular && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <span class="bg-primary text-white px-4 py-2 rounded-full text-sm font-semibold">
                ¡Más Popular!
              </span>
            </div>
          )}

          {/* No Disponible Badge for unavailable plans (except Fase 1) */}
          {!plan.available && plan.name !== "Fase 1" && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <span class="bg-gray-500 text-white px-4 py-2 rounded-full text-sm font-semibold">
                No Disponible
              </span>
            </div>
          )}

          <div class="text-center">
            {/* Plan Name */}
            <h3 class="text-2xl font-bold text-text-dark mb-4">
              {plan.name}
            </h3>



            {/* Price - Show for available plans and Fase 1 */}
            {(plan.available || plan.soldOut) && (
              <div class="mb-6">
                <div class="flex items-center justify-center mb-2">
                  <span class="text-4xl font-bold text-primary">
                    ${plan.price}
                  </span>
                  <span class="text-text-light ml-2">
                    {plan.currency}
                  </span>
                </div>
                
                {/* SOLD OUT Button for Fase 1 */}
                {plan.soldOut && (
                  <div class="flex justify-center mt-4 relative z-20">
                    <button class="bg-gray-800 text-yellow-300 px-6 py-3 rounded-lg font-bold text-lg uppercase tracking-wide cursor-not-allowed">
                      SOLD OUT
                    </button>
                  </div>
                )}
              </div>
            )}

            {/* Features - Show for available plans and Fase 1 */}
            {(plan.available || plan.soldOut) && (
              <div class="space-y-4 mb-8 relative">
                {plan.features.map((feature) => (
                  <div class="flex items-start">
                    <div class="w-5 h-5 bg-primary rounded-full flex items-center justify-center mr-3 mt-0.5 flex-shrink-0">
                      <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <span class="text-text-dark text-sm text-left">
                      {feature}
                    </span>
                  </div>
                ))}
              </div>
            )}

            {/* Custom Message for unavailable plans */}
            {!plan.available && plan.message && (
              <div class="mb-8">
                <p class="text-text-dark text-sm leading-relaxed text-center">
                  {plan.message}
                </p>
              </div>
            )}

            {/* Payment Options */}
            {plan.available && !plan.soldOut && (
              <div class="space-y-3">
                {plan.name === "Fase 2" ? (
                  <>
                    <a 
                      href="https://www.flow.cl/btn.php?token=df921d999e796c105ba43292d598749814efc49a" 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-full inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-full font-semibold hover:bg-red-dark transition-all duration-300 shadow-lg hover:shadow-xl"
                    >
                      Pago completo
                    </a>
                    <a 
                      href="https://www.flow.cl/btn.php?token=yf9450c9f38023f96e867965be0723c9402de620" 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-full inline-flex items-center justify-center px-6 py-3 border-2 border-primary text-primary rounded-full font-semibold hover:bg-primary hover:text-white transition-all duration-300"
                    >
                      Pago 50%
                    </a>
                  </>
                ) : (
                  <>
                    <a 
                      href="https://pay.sumup.com/b2c/XE2GPAZG09" 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-full inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-full font-semibold hover:bg-red-dark transition-all duration-300 shadow-lg hover:shadow-xl"
                    >
                      Pago completo
                    </a>
                    <a 
                      href="https://pay.sumup.com/b2c/XH9MQ6RXP3" 
                      target="_blank"
                      rel="noopener noreferrer"
                      class="w-full inline-flex items-center justify-center px-6 py-3 border-2 border-primary text-primary rounded-full font-semibold hover:bg-primary hover:text-white transition-all duration-300"
                    >
                      Pago 50%
                    </a>
                  </>
                )}
                
                {/* Limited Availability Notice */}
                <div class="text-center mt-4">
                  <p class="text-primary font-bold text-sm bg-primary/10 px-3 py-2 rounded-lg">
                    {plan.name === "Fase 2" ? "10 cupos disponibles" : "Solo para 10 personas"}
                  </p>
                </div>
              </div>
            )}

            {!plan.available && (
              <div class="text-center">

              </div>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- Limited Availability Notice -->
    <div class="text-center mb-16">
      <div class="bg-gradient-to-r from-primary/10 to-red-900/20 rounded-2xl p-8 border border-primary/20">
        <div class="flex items-center justify-center mb-4">
          <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-white">
            Cupos limitados
          </h3>
        </div>
        <p class="text-white/80 max-w-2xl mx-auto mb-6">
          Para mantener la calidad premium del evento y asegurar una experiencia personalizada, 
          solo tenemos cupos limitados disponibles. Reserva antes de que se agoten.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <div class="flex items-center">
            <div class="w-3 h-3 bg-red-500 rounded-full mr-2"></div>
            <span class="text-sm text-white">Lote 1: Disponible</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 bg-gray-400 rounded-full mr-2"></div>
            <span class="text-sm text-white/70">Lote 2: Próximamente</span>
          </div>
          <div class="flex items-center">
            <div class="w-3 h-3 bg-gray-400 rounded-full mr-2"></div>
            <span class="text-sm text-white/70">Lote 3: Próximamente</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Payment Information -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Payment Methods -->
      <div class="space-y-6">
        <h3 class="text-2xl font-bold text-white mb-6">
          Métodos de pago disponibles
        </h3>
        
        <div class="space-y-4">
          <div class="flex items-center p-4 bg-black rounded-lg border border-primary/20">
            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center mr-4">
              <span class="text-blue-600 font-bold">🔗</span>
            </div>
            <div>
              <h4 class="font-semibold text-white">Enlace de pago gestionado por SumUp</h4>
              <p class="text-sm text-white/70">Pago seguro y confiable</p>
            </div>
          </div>
          
          <div class="flex items-center p-4 bg-black rounded-lg border border-primary/20">
            <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center mr-4">
              <span class="text-green-600 font-bold">💳</span>
            </div>
            <div>
              <h4 class="font-semibold text-white">Tarjeta de débito</h4>
              <p class="text-sm text-white/70">Pago directo desde tu cuenta</p>
            </div>
          </div>
          
          <div class="flex items-center p-4 bg-black rounded-lg border border-primary/20">
            <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center mr-4">
              <span class="text-purple-600 font-bold">💳</span>
            </div>
            <div>
              <h4 class="font-semibold text-white">Tarjeta de crédito</h4>
              <p class="text-sm text-white/70">Pago con financiamiento disponible</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: Contact Info -->
      <div class="bg-gradient-to-br from-primary/10 to-red-900/20 rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-white mb-6">
          ¿Tienes preguntas?
        </h3>
        <p class="text-white/80 mb-6">
          Nuestro equipo está aquí para ayudarte con cualquier consulta sobre el evento, 
          métodos de pago o disponibilidad de cupos.
        </p>
        
        <div class="space-y-4">
          <a 
            href="https://wa.link/679vcr" 
            target="_blank"
            class="flex items-center justify-center px-6 py-3 bg-green-500 text-white rounded-full font-semibold hover:bg-green-600 transition-all duration-300"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
            </svg>
            Consultar por WhatsApp
          </a>
          
          <div class="text-center">
            <p class="text-sm text-white/70">
              O escríbenos a: 
              <a href="mailto:info.samygutierrez@gmail.com" class="text-primary font-semibold hover:underline">
                info.samygutierrez@gmail.com
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 