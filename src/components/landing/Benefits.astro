---
interface Benefit {
  title: string;
  description: string;
  icon: string;
  type: 'before' | 'after';
}

const benefits: Benefit[] = [
  {
    title: "Sin guía profesional…",
    description: "Publicas sin estrategia, te frustra el algoritmo y nadie te paga.",
    icon: "❌",
    type: 'before'
  },
  {
    title: "Con Influencer Factory…",
    description: "Diseñas una marca personal magnética, creas contenido que vende y atraes marcas que te pagan bien.",
    icon: "✅",
    type: 'after'
  }
];
---

<section class="py-8 bg-black relative overflow-hidden overflow-x-hidden w-full max-w-full" style="background: url('/assets/backgrounds/Benefits.png') center center / cover no-repeat;">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-12">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4">
        ¿Por qué Influencer Factory transforma tu futuro?
      </h2>
      <div class="w-24 h-1 bg-secondary mx-auto rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {
        benefits.map((benefit) => (
          <div class={`fade-in card-hover p-8 rounded-2xl shadow-lg border-2 transition-all duration-300 hover:shadow-xl ${
            benefit.type === 'before' 
              ? 'bg-black border-secondary hover:border-secondary/80' 
              : 'bg-black text-white border-[#9c4af4] hover:border-[#9c4af4]/80'
          }`}>
            <div class="text-6xl mb-6 text-center max-w">{benefit.icon}</div>
            <h3 class={`text-2xl font-bold mb-4 text-center ${
              benefit.type === 'before' ? 'bg-secondary text-white' : 'bg-[#9c4af4] text-white'
            }`}>
              {benefit.title}
            </h3>
            <p class={`text-lg leading-relaxed text-center ${
              benefit.type === 'before' ? 'text-white' : 'text-white'
            }`}>
              {benefit.description}
            </p>
          </div>
        ))
      }
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <a 
        href="#planes" 
        class="inline-flex items-center justify-center px-8 py-4 bg-secondary text-white rounded-full font-semibold text-lg hover:bg-secondary/90 transition-colors duration-300 shadow-lg hover:shadow-xl"
      >
        Descubre cómo funciona ↓
      </a>
    </div>
  </div>
</section> 