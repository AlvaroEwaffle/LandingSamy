---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Impacto Visual | El primer evento en Chile que transforma cómo grabas tu trabajo en camilla",
  description = "Evento premium para profesionales de la belleza que quieren elevar su contenido. Aprende el método SAMY en vivo, grabación con celular, encuadres y ángulos profesionales.",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, "https://impactovisual.cl");

const socialImageURL = new URL("/assets/Logo.png", canonicalURL);

const keywords = [
  "impacto visual",
  "evento belleza",
  "grabación camilla",
  "contenido profesional",
  "método samy",
  "fotografía belleza",
  "video profesional",
  "marca personal",
  "redes sociales",
  "instagram",
  "tiktok",
  "chile",
  "evento premium",
  "networking",
  "formación belleza",
];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/assets/Logo.png" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(", ")} />
    <meta name="author" content="Impacto Visual" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Impacto Visual" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Additional Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="theme-color" content="#d2201f" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="apple-mobile-web-app-title" content="Impacto Visual" />
    
    <!-- Language and Region -->
    <meta name="language" content="Spanish" />
    <meta name="geo.region" content="CL" />
    <meta name="geo.placename" content="Santiago" />
    
    <!-- Additional SEO -->
    <meta name="revisit-after" content="7 days" />
    <meta name="distribution" content="global" />
    <meta name="rating" content="general" />
    <meta name="coverage" content="worldwide" />
    <meta name="target" content="all" />

    <!-- Structured Data / JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Event",
            "name": "Impacto Visual",
            "description": "El primer evento en Chile que transforma cómo grabas tu trabajo en camilla. Evento premium para profesionales de la belleza.",
            "startDate": "2024-12-01",
            "endDate": "2024-12-01",
            "location": {
              "@type": "Place",
              "name": "Santiago, Chile",
              "address": {
                "@type": "PostalAddress",
                "addressLocality": "Santiago",
                "addressRegion": "RM",
                "addressCountry": "CL"
              }
            },
            "organizer": {
              "@type": "Organization",
              "name": "Impacto Visual",
              "url": "https://impactovisual.cl"
            },
            "performer": {
              "@type": "Person",
              "name": "Samy",
              "description": "Experta en contenido visual para profesionales de la belleza"
            },
            "offers": {
              "@type": "Offer",
              "price": "297000",
              "priceCurrency": "CLP",
              "availability": "https://schema.org/InStock"
            },
            "eventStatus": "https://schema.org/EventScheduled",
            "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode"
          },
          {
            "@type": "Organization",
            "name": "Impacto Visual",
            "url": "https://impactovisual.cl",
            "description": "Evento premium para profesionales de la belleza que quieren elevar su contenido visual.",
            "sameAs": [
              "https://www.instagram.com/impactovisual/",
              "https://www.tiktok.com/@impactovisual"
            ],
            "address": {
              "@type": "PostalAddress",
              "addressLocality": "Santiago",
              "addressRegion": "RM",
              "addressCountry": "CL"
            }
          }
        ]
      }
    </script>

    <!-- Google Fonts - Montserrat -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Remix Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />

    <!-- Social Media Links -->
    <link rel="me" href="https://www.instagram.com/impactovisual/" />
    <link rel="me" href="https://www.tiktok.com/@impactovisual" />

    <!-- AOS Animate On Scroll CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
  </head>
  <body class="overflow-x-hidden">
    <slot />

    <!-- Sticky CTA Button (for scroll, desktop only) -->
    <div class="fixed top-20 right-4 z-50 hidden sm:block">
      <a 
        href="#planes" 
        class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white rounded-full font-semibold text-base hover:bg-red-dark transition-colors duration-300 shadow-lg hover:shadow-xl"
      >
        Quiero vivir esta experiencia
      </a>
    </div>

    <!-- AOS Animate On Scroll JS -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js" defer></script>
    <script is:inline>
      window.addEventListener('DOMContentLoaded', function () {
        if (window.AOS) {
          window.AOS.init({
            duration: 800,
            once: true
          });
        }
        
        // Intersection Observer for fade-in animations
        const observerOptions = {
          threshold: 0.1,
          rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        }, observerOptions);

        // Observe all fade-in elements
        document.querySelectorAll('.fade-in').forEach(el => {
          observer.observe(el);
        });
        
        // Enhanced smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
          anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
              target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
              });
            }
          });
        });
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
