---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Influencer Factory | Academia Digital para Creadores de Contenido",
  description = "Transforma tu pasión por las redes en una carrera rentable. Academia digital con 20 módulos, 90+ lecciones y clases nuevas cada mes para monetizar tu contenido desde cero.",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, "https://www.influencerfactory.com");

const socialImageURL = new URL("/assets/IF_Logo.webp", canonicalURL);

const keywords = [
  "influencer",
  "creador de contenido",
  "monetización",
  "redes sociales",
  "instagram",
  "tiktok",
  "academia digital",
  "formación online",
  "marca personal",
  "contenido digital",
  "influencer marketing",
  "UGC creator",
  "emprendimiento digital",
  "carrera online",
  "redes sociales chile",
];
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Google Tag Manager -->
    <script>
      (function(w,d,s,l,i){
        w[l]=w[l]||[];
        w[l].push({'gtm.start': new Date().getTime(),event:'gtm.js'});
        var f = d.getElementsByTagName(s)[0];
        var j = d.createElement(s);
        var dl = l!='dataLayer'?'&l='+l:'';
        j.async = true;
        j.src = 'https://www.googletagmanager.com/gtm.js?id='+i+dl;
        if (f && f.parentNode) {
          f.parentNode.insertBefore(j,f);
        }
      })(window,document,'script','dataLayer','GTM-52LZ8RJ7');
    </script>
    <!-- End Google Tag Manager -->

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/assets/IF_Logo.webp" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(", ")} />
    <meta name="author" content="Influencer Factory" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Influencer Factory" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Additional Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />
    <meta name="theme-color" content="#29005f" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="apple-mobile-web-app-title" content="Influencer Factory" />
    
    <!-- Language and Region -->
    <meta name="language" content="Spanish" />
    <meta name="geo.region" content="CL" />
    <meta name="geo.placename" content="Santiago" />
    
    <!-- Additional SEO -->
    <meta name="revisit-after" content="7 days" />
    <meta name="distribution" content="global" />
    <meta name="rating" content="general" />
    <meta name="coverage" content="worldwide" />
    <meta name="target" content="all" />

    <!-- Structured Data / JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Organization",
            "name": "Influencer Factory",
            "url": "https://www.influencerfactory.com",
            "logo": "https://www.influencerfactory.com/assets/IF_Logo.webp",
            "description": "Academia digital para creadores de contenido. Transforma tu pasión por las redes en una carrera rentable con formación integral y mentoría personalizada.",
            "sameAs": [
              "https://www.instagram.com/influencerfactory/",
              "https://linkedin.com/company/influencerfactory"
            ],
            "address": {
              "@type": "PostalAddress",
              "addressLocality": "Santiago",
              "addressRegion": "RM",
              "addressCountry": "CL"
            },
            "contactPoint": {
              "@type": "ContactPoint",
              "contactType": "customer service",
              "email": "contacto@influencerfactory.com"
            }
          },
          {
            "@type": "EducationalService",
            "name": "Influencer Factory Academy",
            "description": "Academia digital con 20 módulos, 90+ lecciones y clases nuevas cada mes para monetizar tu contenido desde cero.",
            "provider": {
              "@type": "Organization",
              "name": "Influencer Factory"
            },
            "educationalLevel": "Professional Development",
            "teaches": [
              "Influencer Marketing",
              "Content Creation",
              "Social Media Strategy",
              "Personal Branding",
              "Digital Monetization",
              "Instagram Marketing",
              "TikTok Content",
              "UGC Creation"
            ],
            "offers": {
              "@type": "Offer",
              "price": "29",
              "priceCurrency": "USD",
              "availability": "https://schema.org/InStock"
            },
            "hasCourseInstance": {
              "@type": "CourseInstance",
              "courseMode": "online",
              "inLanguage": "es",
              "courseSchedule": "Flexible",
              "educationalCredentialAwarded": "Certificate of Completion"
            }
          },
          {
            "@type": "Person",
            "name": "Whitney Espinoza",
            "jobTitle": "Fundadora & Instructora Principal",
            "worksFor": {
              "@type": "Organization",
              "name": "Influencer Factory"
            },
            "description": "Transformé mi pasión por las redes en una carrera exitosa. Ahora enseño a más de 1,400 creadores cómo monetizar su contenido."
          }
        ]
      }
    </script>

    <!-- Remix Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />

    <!-- Social Media Links -->
    <link rel="me" href="https://www.instagram.com/influencerfactory/" />
    <link rel="me" href="https://linkedin.com/company/influencerfactory" />

    <!-- AOS Animate On Scroll CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" />
  </head>
  <body class="overflow-x-hidden">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-52LZ8RJ7"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <slot />

    <!-- Sticky CTA Button (for scroll, desktop only) -->
    <div class="fixed top-4 right-4 z-50 hidden sm:block">
      <a 
        href="#planes" 
        class="inline-flex items-center justify-center px-6 py-3 bg-secondary text-white rounded-full font-semibold text-base hover:bg-secondary/90 transition-colors duration-300 shadow-lg hover:shadow-xl"
      >
        Inscribirme
      </a>
    </div>

    <!-- AOS Animate On Scroll JS -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js" defer></script>
    <script is:inline>
      window.addEventListener('DOMContentLoaded', function () {
        if (window.AOS) {
          window.AOS.init({
            duration: 800,
            once: true
          });
        }
      });
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
